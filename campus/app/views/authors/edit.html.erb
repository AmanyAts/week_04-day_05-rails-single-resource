<h1>update</h1>
<%= form_for @author, url: {action: "update"} do |form| %>
    <p> <%= form.label :first_name %>
    <%= form.text_field :first_name %></p>
   <p> <%= form.label :last_name %>
    <%= form.text_field :last_name %></p>
   <p> <%= form.label :nickname %>
    <%= form.text_field :nickname %></p>
    <p> <%= form.label :hometown %>
    <%= form.text_field :hometown %></p>
    <p> <%= form.label :age %>
    <%= form.text_field :age %></p>
    <%= form.submit "update" %>
<% end %>